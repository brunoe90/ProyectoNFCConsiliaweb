<?xml version="1.0" encoding="utf-8"?>



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.consilia.nfcbeta.pasanopasaActivity"
        android:weightSum="1"
        android:animationCache="false"
        android:id="@+id/pasanopasa">

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/pedir_foto"
            android:id="@+id/buttonfoto"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="bottom"
            android:layout_above="@+id/bvolver"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dato"
            android:textSize="24sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:text="@string/tarjeta_no_reconocida"
            android:textColor="@color/grisboleteria"
            android:textAlignment="center" />

    <ImageView
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:innerRadius="0dp"
        android:id="@+id/imageView"
        android:shadowColor="#000000"
        android:contentDescription=""
        android:adjustViewBounds="false"

        android:background="@drawable/nofoto"
        android:fadingEdge="horizontal|vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/tarjeta_no_ingresada_en_el_sistema"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dato"
        android:layout_centerHorizontal="true"
        android:id="@+id/informacion"
        android:textColor="@color/grisboleteria"
        android:textSize="20sp"
        android:textAlignment="center" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/leer"

        android:textColor="@color/gris"
        android:id="@+id/bvolver"
        android:background="@android:drawable/editbox_background"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp" />

    <TextView
        android:text="@string/estado_acceso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datop"
        android:textColor="@color/gris"
        android:textSize="26sp"
        android:textAlignment="viewStart"
        android:layout_above="@+id/Puertas"
        android:layout_alignLeft="@+id/Puertas"
        android:layout_alignStart="@+id/Puertas" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tresultado"

        android:textAlignment="viewStart"
        android:textSize="24sp"
        android:text="@string/ultima_cuota_paga"
        android:textColor="@color/grisboleteria"
        android:layout_above="@+id/bvolver"
        android:layout_alignLeft="@+id/Puertas"
        android:layout_alignStart="@+id/Puertas" />

    <TextView
        android:text="@string/puertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Puertas"
        android:textSize="26sp"
        android:textColor="@color/gris"
        android:layout_above="@+id/tresultado"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

</RelativeLayout>

