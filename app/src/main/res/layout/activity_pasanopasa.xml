<?xml version="1.0" encoding="utf-8"?>



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#000000"
        tools:context="com.consilia.nfcbeta.pasanopasaActivity"
        android:weightSum="1"
    android:animationCache="false">

    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/pedir_foto"
            android:id="@+id/buttonfoto"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="bottom"
            android:layout_above="@+id/bvolver"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/leer"
            android:id="@+id/bvolver"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dato"
            android:textSize="30sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:text="@string/asdasd" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:innerRadius="0dp"
        android:id="@+id/imageView"
        android:shadowColor="#000000"
        android:contentDescription=""
        android:adjustViewBounds="true"

        android:fadingEdge="horizontal|vertical"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/informacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dato"
        android:layout_centerHorizontal="true"
        android:id="@+id/informacion" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tresultado"

        android:textAlignment="center"
        android:textSize="20sp"
        android:text="@string/asas"
        android:layout_above="@+id/bvolver"
        android:layout_alignRight="@+id/dato"
        android:layout_alignEnd="@+id/dato"
        android:layout_marginBottom="26dp" />

    <TextView
        android:text="@string/puertas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Puertas"
        android:layout_above="@+id/tresultado"
        android:layout_alignRight="@+id/tresultado"
        android:layout_alignEnd="@+id/tresultado"
        android:layout_marginBottom="68dp" />

</RelativeLayout>

