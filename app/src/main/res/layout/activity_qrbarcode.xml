<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundapp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.consilia.nfcbeta.QRBarcodeActivity">


    <TabHost
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tabHost">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <LinearLayout
                    android:tag="tab1"
                    android:id="@+id/tab1"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal"
                        android:id="@+id/text"
                        android:textSize="30sp"
                        android:textColor="@color/verdeboleteria"
                        android:layout_gravity="center_horizontal"
                        tools:targetApi="jelly_bean" />

                    <Button
                        android:text="@string/leer_qr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/bqr"
                        android:background="@drawable/boton"
                        android:textColor="@color/grisboleteria"
                        android:textSize="40sp"
                        android:textStyle="normal|bold|italic" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:srcCompat="@drawable/qractivity"
                        android:id="@+id/imageView5" />

                    <Button
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal|bold"
                        android:layout_gravity="center_horizontal"
                        android:background="@android:drawable/editbox_background"
                        android:textSize="30sp"
                        android:text="@string/enviar"
                        android:id="@+id/benviar"
                        android:layout_weight="0"
                        android:textColor="@color/verdeboleteria"
                        tools:targetApi="jelly_bean" />


                </LinearLayout>

                <LinearLayout
                    android:tag="tab2"
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal|bold|italic"
                        android:textColor="@color/grisboleteria"
                        android:text="@string/socio"
                        android:gravity="center_horizontal"
                        android:id="@+id/textView5"
                        android:textSize="40sp"
                        android:layout_gravity="center_horizontal"
                        tools:targetApi="jelly_bean" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/socio"
                        android:id="@+id/imageView3" />






                    <RadioGroup
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/verdeboleteria"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0" >

                        <RadioButton
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal|bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/id"
                            android:id="@+id/idsocio"
                            android:textColor="@color/verdeboleteria"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0"
                            android:checked="false"
                            android:textSize="20sp"
                            android:onClick="onRadioButtonClicked"
                            tools:targetApi="jelly_bean" />

                        <RadioButton
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal|bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/documento_dni"
                            android:textColor="@color/verdeboleteria"
                            android:id="@+id/docsocio"
                            android:layout_gravity="right"
                            android:layout_weight="0"
                            android:checked="false"
                            android:textSize="20sp"
                            android:onClick="onRadioButtonClicked"
                            tools:targetApi="jelly_bean" />

                    </RadioGroup>

                    <EditText

                        android:layout_width="match_parent"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="number"
                        android:textColor="@color/verdeboleteria"
                        android:id="@+id/edtsocio"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:maxLines="1"
                        tools:targetApi="jelly_bean"
                        android:layout_height="wrap_content"
                        android:textSize="20sp" />

                    <Button
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal|bold"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:textColor="@color/verdeboleteria"
                        android:layout_width="match_parent"
                        android:background="@drawable/boton"
                        android:text="@string/enviar"
                        android:id="@+id/bidsocio"
                        tools:targetApi="jelly_bean" />


                </LinearLayout>

                <LinearLayout

                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal|bold|italic"
                        android:text="@string/invitado"
                        android:textColor="@color/grisboleteria"
                        android:gravity="center_horizontal"
                        android:id="@+id/textView6"
                        android:textSize="40sp"
                        android:layout_gravity="center_horizontal"
                        tools:targetApi="jelly_bean" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/invitado"
                        android:id="@+id/imageView3" />


                    <RadioGroup
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/verdeboleteria"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="0" >

                        <RadioButton
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal|bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/id"
                            android:id="@+id/idInv"
                            android:textColor="@color/verdeboleteria"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0"
                            android:checked="false"
                            android:textSize="20sp"
                            android:onClick="onRadioButtonClicked"
                            tools:targetApi="jelly_bean" />

                        <RadioButton
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="normal|bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/documento_dni"
                            android:textColor="@color/verdeboleteria"
                            android:id="@+id/dniInv"
                            android:layout_gravity="right"
                            android:layout_weight="0"
                            android:checked="false"
                            android:textSize="20sp"
                            android:onClick="onRadioButtonClicked"
                            tools:targetApi="jelly_bean" />

                    </RadioGroup>

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="number"
                        android:textColor="@color/verdeboleteria"
                        android:id="@+id/edtinvitado"
                        android:gravity="center_horizontal"
                        android:maxLines="1"
                        android:textSize="20sp"
                        tools:targetApi="jelly_bean" />

                    <Button
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="normal|bold"
                        android:layout_height="50dp"
                        android:textSize="20sp"
                        android:textColor="@color/verdeboleteria"
                        android:layout_width="match_parent"
                        android:background="@drawable/boton"
                        android:text="@string/enviar"
                        android:id="@+id/binvitado"
                        tools:targetApi="jelly_bean" />

                </LinearLayout>


            </FrameLayout>

        </LinearLayout>

    </TabHost>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="50sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal|bold|italic"
        android:text="@string/formato"
        android:id="@+id/formatTxt"
        android:visibility="gone"
        tools:targetApi="jelly_bean" />

    <TextView
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_tview_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contentTxt"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="50sp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal|bold|italic"
        android:id="@+id/textView6"
        android:text="@string/id_socio"
        android:textColor="@color/gris"
        tools:targetApi="jelly_bean" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0">

        <RadioButton
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal|bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/idsocio"
            android:id="@+id/buttonsocio"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0"
            android:checked="false"
            android:textSize="20sp"
            android:onClick="onRadioButtonClicked"
            android:textColor="@color/verdeboleteria"
            tools:targetApi="jelly_bean" />

        <RadioButton
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal|bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/documento"
            android:id="@+id/buttondni"
            android:layout_gravity="right"
            android:layout_weight="0"
            android:checked="false"
            android:textSize="20sp"
            android:onClick="onRadioButtonClicked"
            android:textColor="@color/verdeboleteria"
            tools:targetApi="jelly_bean" />

    </RadioGroup>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="number"
        android:ems="10"
        android:maxLength="10"
        android:id="@+id/editText4"
        android:foregroundGravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/gris" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal|bold"
        android:layout_gravity="center_horizontal"
        android:background="@android:drawable/editbox_background"
        android:textSize="30sp"
        android:text="@string/enviar_id_socio"
        android:id="@+id/bidsocio"
        android:layout_weight="0"
        android:textColor="@color/verdeboleteria"
        tools:targetApi="jelly_bean" />
</LinearLayout>
